{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@homework-task/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "esnext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "src/types/**/*.d.ts"]
}
